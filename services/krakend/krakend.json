{
    "version": 3,
    "name": "SCU API Gateway",
    "port": 8080,
    "cache_ttl": "3600s",
    "timeout": "3000ms",
    "extra_config": {
        "github_com/devopsfaith/krakend-cors": {
            "allow_origins": [
                "*"
            ],
            "allow_methods": [
                "GET",
                "POST",
                "PUT",
                "DELETE",
                "PATCH"
            ],
            "allow_headers": [
                "Authorization",
                "Content-Type",
                "X-Tenant-ID"
            ],
            "expose_headers": [
                "Content-Length"
            ],
            "max_age": "12h"
        }
    },
    "endpoints": [
        {
            "endpoint": "/api/activity",
            "method": "POST",
            "input_headers": [
                "*"
            ],
            "backend": [
                {
                    "url_pattern": "/jsonrpc",
                    "host": [
                        "http://activity-service:8069"
                    ]
                }
            ]
        },
