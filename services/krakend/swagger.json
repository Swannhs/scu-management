            }
        },
        "schemas": {
            "JsonRpcRequest": {
                "type": "object",
                "required": [
                    "jsonrpc",
                    "method",
                    "params"
                ],
                "properties": {
                    "jsonrpc": {
                        "type": "string",
                        "enum": [
                            "2.0"
                        ]
                    },
                    "method": {
                        "type": "string",
                        "example": "call"
                    },
                    "params": {
                        "type": "object",
                        "properties": {
                            "service": {
                                "type": "string",
                                "enum": [
                                    "common",
                                    "object",
                                    "db"
                                ]
                            },
                            "method": {
                                "type": "string"
                            },
                            "args": {
                                "type": "array"
                            }
                        }
                    }
                }
            },
            "JsonRpcResponse": {
                "type": "object",
                "properties": {
                    "jsonrpc": {
                        "type": "string"
                    },
                    "id": {
                        "type": "string",
                        "nullable": true
                    },
                    "result": {
                        "type": "object"
                    },
                    "error": {
                        "type": "object",
                        "nullable": true
                    }
                }
            }
        }
