{
    "openapi": "3.0.0",
    "info": {
        "title": "SCU Management API (Complete OpenEducat Suite)",
        "description": "JSON-RPC 2.0 API for SCU Management system powered by OpenEducat (Odoo). \n\n**Note**: All endpoints require a JSON-RPC 2.0 POSST payload. Authentication is required via the `common/authenticate` method (see `/core`).",
        "version": "1.1.0"
    },
    "servers": [
        {
            "url": "http://localhost/api",
            "description": "SCU API Gateway"
        }
    ],
    "tags": [
        {
            "name": "Core",
            "description": "Authentication, Student, Faculty, Courses"
        },
        {
            "name": "Academic",
            "description": "Attendance, Timetable, Assignments, Exams"
        },
        {
            "name": "Administrative",
            "description": "Admission, Fees, Finance"
        },
        {
            "name": "Campus",
            "description": "Library, Facility, Activity, Classroom"
        },
        {
            "name": "Portal",
            "description": "Parent and Student Portal"
        }
    ],
    "paths": {
        "/core": {
            "post": {
                "tags": [
                    "Core"
                ],
                "summary": "Core Services (Auth, Students, Faculty)",
                "description": "Authenticate users and manage core entities (Students, Faculty, Courses).",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/JsonRpcRequest"
                            },
                            "examples": {
                                "authenticate": {
                                    "summary": "Authenticate User (Login)",
                                    "value": {
                                        "jsonrpc": "2.0",
                                        "method": "call",
                                        "params": {
                                            "service": "common",
                                            "method": "authenticate",
                                            "args": [
                                                "postgres",
                                                "admin",
                                                "admin",
                                                {}
                                            ]
                                        }
                                    }
                                },
                                "search_students": {
                                    "summary": "List All Students",
                                    "value": {
                                        "jsonrpc": "2.0",
                                        "method": "call",
                                        "params": {
                                            "service": "object",
                                            "method": "execute_kw",
                                            "args": [
                                                "postgres",
                                                2,
                                                "admin",
                                                "op.student",
                                                "search_read",
                                                [
                                                    []
                                                ],
                                                {
                                                    "fields": [
                                                        "name",
                                                        "last_name",
                                                        "gender"
                                                    ],
                                                    "limit": 10
                                                }
                                            ]
                                        }
                                    }
                                },
                                "create_student": {
                                    "summary": "Create New Student",
                                    "value": {
                                        "jsonrpc": "2.0",
                                        "method": "call",
                                        "params": {
                                            "service": "object",
                                            "method": "execute_kw",
                                            "args": [
                                                "postgres",
                                                2,
                                                "admin",
                                                "op.student",
                                                "create",
                                                [
                                                    {
                                                        "name": "John",
                                                        "last_name": "Doe",
                                                        "gender": "m",
                                                        "birth_date": "2000-01-01"
                                                    }
                                                ]
                                            ]
                                        }
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "$ref": "#/components/responses/Success"
                    }
                }
            }
        },
