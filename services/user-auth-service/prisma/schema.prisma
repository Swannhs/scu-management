generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  TENANT_ADMIN
  ADMISSION_OFFICER
  FACULTY
  STUDENT
  ACCOUNTANT
  WARDEN
  LIBRARIAN
  PLACEMENT_OFFICER
}

model User {
  id          String   @id @default(uuid())
  keycloakId  String   @unique
  tenantId    String
  email       String   @unique
  role        Role
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([tenantId])
}
