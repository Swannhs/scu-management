generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum StudentStatus {
  ACTIVE
  INACTIVE
  GRADUATED
  DROPPED
  PROBATION
}

model Student {
  id              String        @id @default(uuid())
  tenantId        String
  keycloakId      String?       @unique // Optional if user-auth is separate but linked
  studentId       String        @unique // Institutional identifier (e.g. ROLL NO)
  firstName       String
  lastName        String
  email           String
  phone           String?
  dateOfBirth     DateTime?
  gender          String?
  address         String?
  
  // Admission Info
  admissionDate   DateTime      @default(now())
  status          StudentStatus @default(ACTIVE)
  
  // Parent/Guardian Info
  parentName      String?
  parentPhone     String?
  parentEmail     String?
  
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  @@index([tenantId])
  @@index([status])
}
